<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.lovemoon.talk.qrcode_scanner"
android:orientation="vertical"
    >
<customfonts.MyEditText
    android:id="@+id/barcodetextScan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Barcode Text"
    android:inputType="text"
    android:textColor="#000"
    android:background="#f0f0f4"
    android:padding="12dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:drawableLeft="@drawable/ic_text_shadow"
    android:drawablePadding="16dp"
    />
<customfonts.MyRegulerText
    android:id="@+id/barcodetext_btnScan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btnformate"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="70dp"
    android:layout_marginRight="70dp"
    android:textAlignment="center"
    android:padding="14dp"
    android:gravity="center"
    android:text="Scan"
    android:textSize="16dp"
    android:textColor="#fff"
    />

</LinearLayout>